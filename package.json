{
  "name": "yigcore-sentinel",
  "version": "0.3.0",
  "description": "Lightweight governance layer for AI agents - budget control, audit logging, policy enforcement",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "yigcore-sentinel": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t yigcore-sentinel:latest .",
    "docker:run": "docker run -p 11435:11435 --env-file .env yigcore-sentinel:latest",
    "docker:compose:up": "docker compose up -d",
    "docker:compose:down": "docker compose down",
    "docker:compose:logs": "docker compose logs -f sentinel"
  },
  "keywords": [
    "ai",
    "agent",
    "governance",
    "openclaw",
    "budget",
    "audit",
    "policy",
    "rate-limiting",
    "sidecar"
  ],
  "author": "Sentinel Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Henghenggao/yigcore-sentinel.git"
  },
  "homepage": "https://github.com/Henghenggao/yigcore-sentinel#readme",
  "bugs": {
    "url": "https://github.com/Henghenggao/yigcore-sentinel/issues"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.6.2",
    "fastify": "^4.26.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "axios": "^1.13.4",
    "eslint": "^8.57.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}